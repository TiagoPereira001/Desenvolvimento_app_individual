<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".WelcomeActivity">
    <!-- icon -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/bem"
        app:tint="@color/texto_primario" android:alpha="0.8" />
    <!-- titulo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Bem-vindo!"
        android:textColor="@color/texto_primario"
        android:textSize="36sp"
        android:textStyle="bold" />
    <!-- uma apresentação mais cordial -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Como queres ser chamado?"
        android:textColor="@color/texto_secundario"
        android:textSize="18sp" />
    <!-- caixa de texto-->

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="O teu nome"
        app:boxStrokeColor="@color/primario"
        app:hintTextColor="@color/hint"
        android:textColorHint="@color/hint"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|textCapWords"
            android:maxLines="1"
            android:textColor="@color/texto_primario" />
    </com.google.android.material.textfield.TextInputLayout>
    <!-- botao de continuar -->
    <Button
        android:id="@+id/btn_continuar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/primario"
        android:text="Continuar"
        android:textColor="@color/texto"
        android:textSize="18sp" />

</LinearLayout>