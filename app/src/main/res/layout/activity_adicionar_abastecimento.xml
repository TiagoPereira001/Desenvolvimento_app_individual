<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="30dp"
    tools:context=".AdicionarAbastecimentoActivity">
    <!-- Título -->

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Novo Abastecimento"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/texto_primario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>
    <!-- kms percorridos -->
    <!-- usei o "<com.google.android.material.textfield.TextInputLayout" porque com o "editText" assim que o utilizador ia começar a escrever -->
    <!-- o texto de ajuda ia desaparecer -->


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_kms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:hint="Kilómetros percorridos"
        app:startIconDrawable="@drawable/rapido"
        app:boxStrokeColor="@color/primario"
        app:hintTextColor="@color/primario"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/kms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="@color/texto_primario" />
        </com.google.android.material.textfield.TextInputLayout>
        <!-- preço por litro -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_preco_litro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_kms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:hint="Preço por litro"
        app:startIconDrawable="@drawable/carteira"
        app:boxStrokeColor="@color/primario"
        app:hintTextColor="@color/primario"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/preco_litro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="@color/texto_primario" /> </com.google.android.material.textfield.TextInputLayout>
    <!-- preço total -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_preco_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_preco_litro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:hint="Preço Total (€)"
        app:startIconDrawable="@drawable/dinheiro"
        app:boxStrokeColor="@color/primario"
        app:hintTextColor="@color/primario"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/preco_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="@color/texto_primario" /> </com.google.android.material.textfield.TextInputLayout>
    <!-- botão guardar abastecimento -->
    <Button
        android:id="@+id/btn_guardar_abastecimento"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@id/layout_preco_total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:text="Guardar Abastecimento"
        android:textSize="18sp"
        android:textColor="@color/texto"
        android:backgroundTint="@color/primario"/>

</androidx.constraintlayout.widget.ConstraintLayout>